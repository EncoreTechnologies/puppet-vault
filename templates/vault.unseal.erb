#!/bin/bash

if ! grep -q "<%= @vault_bin_dir -%>" <<< $PATH ; then
  export PATH="$PATH:<%= @vault_bin_dir -%>"
fi

if [[ -z $VAULT_ADDR ]]; then
  export VAULT_ADDR="<%= @vault_addr -%>"
fi

vault status >/dev/null 2>&1
status=$?

## Check if vault is unsealed already.
if [[ $status -eq 0 ]]; then
  echo "Vault is unsealed already."
  exit 0
else
  echo -e "> Vault is sealed, unsealing now.\n"
fi

if [[ -s <%= @vault_dir -%>/vault_init.txt ]]; then
  ## Unseal vault with detected keys
  mapfile -t keys < <(grep 'Unseal Key' <%= @vault_dir -%>/vault_init.txt | awk '{ print $4 }')
<% if @vault_keys -%>
else
  ## Unseal vault with hiera defined keys
<% @vault_keys.each do |key| -%>
  keys+="<%= key -%>"
<% end -%>
<% end -%>
fi

if [[ -z ${keys[0]} ]];
  echo "No keys available to unseal vault."
  exit 2
fi

i=0
while [[ $i -lt <%= @vault_min_keys -%> ]]; do
  vault operator unseal "${keys[$i]}" >/dev/null 2>&1
  ((i++))
done

vault status

